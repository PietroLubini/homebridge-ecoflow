{
  "pluginAlias": "EcoFlowHomebridge",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "Homebridge EcoFlow",
        "required": true
      },
      "devices": {
        "type": "array",
        "required": true,
        "uniqueItems": true,
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true,
              "description": "Name of the EcoFlow device"
            },
            "model": {
              "title": "Model",
              "type": "string",
              "required": true,
              "enum": ["Delta 2", "Delta 2 Max"]
            },
            "serialNumber": {
              "title": "Serial Number",
              "type": "string",
              "required": true,
              "description": "Serial number of the EcoFlow device"
            },
            "accessKey": {
              "title": "Access Key",
              "type": "string",
              "required": true,
              "description": "Access Key from \"EcoFlow IoT Developer Platform\" (https://developer-eu.ecoflow.com)"
            },
            "secretKey": {
              "title": "Secret Key",
              "type": "string",
              "required": true,
              "description": "Secret Key from \"EcoFlow IoT Developer Platform\" (https://developer-eu.ecoflow.com)"
            },
            "battery": {
              "title": "Battery Settings",
              "type": "object",
              "properties": {
                "customCharacteristics": {
                  "title": "Custom Characteristics",
                  "description": "List of custom characteristics to be added for battery",
                  "type": "array",
                  "uniqueItems": true,
                  "items": {
                    "title": "Characteristic",
                    "type": "string",
                    "enum": ["Consumption, W", "Total Consumption, kW"]
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
