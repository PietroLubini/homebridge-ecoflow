{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@ecoflow/*": ["*"]
    },
    "lib": ["DOM", "ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": ["./src"],
  "exclude": ["**/webpack.config.ts"]
}
